// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// =========================================================
// ENUMS
// =========================================================

enum Role {
  SUPERADMIN // Master Admin (You)
  ADMIN // Company Owner
  MANAGER // Team Manager
  AGENT // Support/Sales Agent
}

enum PlanInterval {
  MONTHLY
  YEARLY
}

enum CompanyStatus {
  ACTIVE
  TRIAL
  SUSPENDED
  OVERDUE
  CANCELLED
}

enum TicketStatus {
  OPEN
  PENDING
  RESOLVED
  CLOSED
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum MessageStatus {
  SENT
  DELIVERED
  READ
  FAILED
}

enum MessageType {
  TEXT
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT
  LOCATION
}

enum CampaignStatus {
  DRAFT
  SCHEDULED
  RUNNING
  COMPLETED
  PAUSED
  FAILED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  OVERDUE
}

enum InstanceStatus {
  CONNECTED
  DISCONNECTED
  QRCODE
  PAIRING
  TIMEOUT
}

// =========================================================
// GLOBAL / MASTER SAAS TABLES
// =========================================================

model Plan {
  id           String  @id @default(uuid())
  name         String
  description  String?
  priceMonthly Decimal
  priceYearly  Decimal

  // Limits
  maxUsers    Int
  maxWhatsApp Int
  maxMessages Int // Monthly message limit

  // Features (Boolean flags)
  hasChatbot   Boolean @default(false)
  hasFunnel    Boolean @default(true)
  hasCampaigns Boolean @default(false)
  hasAPI       Boolean @default(false)

  isRecommended Boolean @default(false)
  isActive      Boolean @default(true)

  companies Company[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Company {
  id       String  @id @default(uuid())
  name     String
  document String? // CNPJ/CPF
  email    String  @unique // Admin contact email
  phone    String?

  domain String? @unique // Custom subdomain (e.g., acme.bidflow.com)
  logo   String?

  status      CompanyStatus @default(TRIAL)
  trialEndsAt DateTime?

  // Plan Relation
  planId String
  plan   Plan   @relation(fields: [planId], references: [id])

  // Relations (Multi-tenancy)
  users         User[]
  contacts      Contact[]
  conversations Conversation[]
  funnels       Funnel[]
  tasks         Task[]
  campaigns     Campaign[]
  events        Event[]
  instances     WhatsAppInstance[]
  invoices      Invoice[]
  logs          Log[]
  chatbotFlows  ChatbotFlow[]
  tags          Tag[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id           String  @id @default(uuid())
  name         String
  email        String  @unique
  passwordHash String
  avatar       String?
  role         Role    @default(AGENT)

  // Security
  twoFactorEnabled Boolean   @default(false)
  twoFactorSecret  String?
  lastLogin        DateTime?

  // Tenant
  companyId String? // Nullable for Superadmin (Master)
  company   Company? @relation(fields: [companyId], references: [id], onDelete: Cascade)

  // Relations
  tasksAssigned Task[]
  events        Event[]
  messagesSent  Message[]
  tickets       SupportTicket[] // Tickets created by this user (if Client) or Assigned to (if Master)

  isActive      Boolean        @default(true)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  conversations Conversation[]
}

// =========================================================
// CRM & COMMUNICATION (TENANT SCOPED)
// =========================================================

model WhatsAppInstance {
  id        String  @id @default(uuid())
  companyId String
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  name         String
  phoneNumber  String?
  status       InstanceStatus @default(DISCONNECTED)
  batteryLevel Int?
  qrCode       String?        @db.Text

  lastSync  DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Contact {
  id        String  @id @default(uuid())
  companyId String
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  name   String
  phone  String // WhatsApp ID format (e.g., 5511999999999)
  email  String?
  avatar String?

  // CRM Fields
  address      String?
  notes        String? @db.Text
  customFields Json? // Flexible JSON for extra fields

  tags          Tag[]
  conversations Conversation[]
  deals         Deal[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([companyId, phone]) // Prevent duplicate phones per company
}

model Tag {
  id        String    @id @default(uuid())
  name      String
  color     String    @default("#6366f1")
  companyId String
  company   Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  contacts  Contact[]

  @@unique([companyId, name])
}

model Conversation {
  id        String  @id @default(uuid())
  companyId String
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  contactId String
  contact   Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)

  status        String   @default("OPEN") // OPEN, CLOSED, PENDING
  unreadCount   Int      @default(0)
  lastMessageAt DateTime @default(now())

  messages Message[]

  assignedToId String?
  assignedTo   User?   @relation(fields: [assignedToId], references: [id])
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  senderType String // "CONTACT", "AGENT", "BOT"
  senderId   String? // User ID if Agent
  sender     User?   @relation(fields: [senderId], references: [id])

  content  String      @db.Text
  type     MessageType @default(TEXT)
  mediaUrl String?

  status MessageStatus @default(SENT)
  wamId  String? // WhatsApp Message ID

  createdAt DateTime @default(now())
}

// =========================================================
// SALES FUNNEL (KANBAN)
// =========================================================

model Funnel {
  id        String        @id @default(uuid())
  name      String
  companyId String
  company   Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  stages    FunnelStage[]
  deals     Deal[]
}

model FunnelStage {
  id       String @id @default(uuid())
  name     String
  color    String
  order    Int
  funnelId String
  funnel   Funnel @relation(fields: [funnelId], references: [id], onDelete: Cascade)
  deals    Deal[]
}

model Deal {
  id    String  @id @default(uuid())
  title String
  value Decimal

  contactId String
  contact   Contact @relation(fields: [contactId], references: [id])

  funnelId String
  funnel   Funnel @relation(fields: [funnelId], references: [id])

  stageId String
  stage   FunnelStage @relation(fields: [stageId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// =========================================================
// AUTOMATION & CHATBOT
// =========================================================

model ChatbotFlow {
  id          String  @id @default(uuid())
  name        String
  description String?
  companyId   String
  company     Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  nodes       Json // Storing ReactFlow nodes structure
  connections Json // Storing ReactFlow edges structure

  isActive Boolean @default(false)
  trigger  String? // Keyword to trigger flow

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Campaign {
  id        String  @id @default(uuid())
  name      String
  companyId String
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  message  String         @db.Text
  mediaUrl String?
  status   CampaignStatus @default(DRAFT)

  scheduledAt DateTime?
  sentCount   Int       @default(0)
  openRate    Float?

  createdAt DateTime @default(now())
}

// =========================================================
// PRODUCTIVITY
// =========================================================

model Task {
  id          String       @id @default(uuid())
  title       String
  description String?
  priority    TaskPriority @default(MEDIUM)
  status      TaskStatus   @default(PENDING)
  dueDate     DateTime?

  companyId String
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  assigneeId String?
  assignee   User?   @relation(fields: [assigneeId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  type        String // meeting, deadline, etc.

  companyId String
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id])
}

// =========================================================
// FINANCE & BILLING
// =========================================================

model Invoice {
  id        String  @id @default(uuid())
  companyId String
  company   Company @relation(fields: [companyId], references: [id])

  amount  Decimal
  status  String // PAID, PENDING, FAILED
  dueDate DateTime
  paidAt  DateTime?

  pdfUrl    String?
  gatewayId String? // Stripe/MercadoPago ID

  createdAt DateTime @default(now())
}

// =========================================================
// SYSTEM ADMIN & SUPPORT
// =========================================================

model SupportTicket {
  id       String         @id @default(uuid())
  subject  String
  status   TicketStatus   @default(OPEN)
  priority TicketPriority @default(MEDIUM)

  // The user who opened the ticket (Client)
  authorId String
  author   User   @relation(fields: [authorId], references: [id])

  companyId String? // If related to a specific company context

  messages TicketMessage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TicketMessage {
  id       String        @id @default(uuid())
  ticketId String
  ticket   SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  content  String  @db.Text
  senderId String
  isAdmin  Boolean @default(false) // True if sent by SaaS support team

  createdAt DateTime @default(now())
}

model Log {
  id          String  @id @default(uuid())
  level       String // INFO, WARN, ERROR
  action      String // LOGIN, DELETE_CONTACT, etc.
  description String?
  ipAddress   String?

  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  userId String?

  createdAt DateTime @default(now())
}
